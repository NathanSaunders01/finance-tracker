<h1>Welcome to the finance tracker app</h1>
<% if current_user %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "View your Portfolio", my_portfolio_path, class: 'btn btn-default btn-success' %>
      <%= link_to "View your Friends",  my_friends_path, class: 'btn btn-default btn-success' %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-default btn-success' %>
      <%= link_to "Sign In", new_user_session_path, class: 'btn btn-default btn-success' %>
    </div>
  </div>
<% end %>
